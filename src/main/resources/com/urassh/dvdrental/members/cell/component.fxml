<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.urassh.dvdrental.controller.members.MemberCellController"
           styleClass="card"
           stylesheets="@card.css">
    <HBox styleClass="card-h-content">
        <ImageView fx:id="memberImageView" fitWidth="60" fitHeight="60"/>
        <VBox styleClass="card-v-content">
            <Label fx:id="memberNameLabel" styleClass="member-name"/>
            <Label fx:id="memberIdLabel" styleClass="member-id"/>
        </VBox>
    </HBox>
</StackPane>
